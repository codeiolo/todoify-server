##############################
#           Settings         #
##############################

# App settings
# This is just for show in logs and server header.
APP_NAME = 'Todoify Server'
# PM2 process app name
PROCESS_NAME = 'todoify-server'
# This is just for show in logs.
STARTUP_MESSAGE = 'Starting Todoify Server. A simple to-do and categories REST API.'
# Set this to what ever you want. Needed for encrypting JWT tokens.
SECRET_KEY = 'supersecret_key_that-everyone!Hates'
# When JWT token should expire in seconds. Default is 1 hour. You can also use JWT shorthands read more here.
# https://github.com/auth0/node-jsonwebtoken#token-expiration-exp-claim
TOKEN_EXPIRESIN = '1h'
# Morgan request logger level
MORGAN_LEVEL = 'dev'
# Link to API documentation (Default is our documentation on Postman https://documenter.getpostman.com/view/1602420/S1Zz6UxQ?version=latest)
API_DOCUMENTATION_LINK = 'https://documenter.getpostman.com/view/1602420/S1Zz6UxQ?version=latest'

# Network
# The port you want the server to listen on. Default: 5050
PORT = 5050

# MongoDB Database settings
# Your MongoDB URI ex. mongodb://username:password@localhost:27017/todoify
MONGODB_URI = 'mongodb://username:password@localhost:27017/todoify'
# If Mongoose is unable to connect or loses connection to DB, how often should it
# try to reconnect, default: every 5 seconds.
DB_RECONNECT_SECONDS = 5

# Email server settings - For sending account activation and reset password emails.
# SMTP server host
SMTP_HOST = "smtp.example.com"
# SMTP port 
SMTP_PORT = 587
# SMTP username
SMTP_USERNAME = "username"
# SMTP password
SMTP_PASSWORD = "password"
# SMTP default from adress.
SMTP_DEFAULT_FROM = "no-reply@example.com"